<Window x:Class="WatermillApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatermillApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="userNameBox" HorizontalAlignment="Left" Height="25" Margin="87,94,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="115"/>
        <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Height="25" Margin="87,135,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="115"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="87,173,0,0" VerticalAlignment="Top" Width="75" Click="Login_OnClick"/>
        <Button x:Name="quitButton" Content="Exit" HorizontalAlignment="Left" Margin="167,173,0,0" VerticalAlignment="Top" Width="75" Click="Exit_OnClick"/>

    </Grid>
</Window>
